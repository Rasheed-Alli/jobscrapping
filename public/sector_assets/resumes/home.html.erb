<div class="auth_box">
    <h2> Build Your Resume </h2>
    <% if user_signed_in? %> 
      <%= link_to 'Logout', destroy_user_session_path, :method => :delete , class: "btn white cyan-text" %> </h5>
    <% end %>
    
    <%= form_tag resumebuilder_path , :method => :get do %> 
      <%= text_field_tag :name ,nil, placeholder:  "Your Name" %> 
      <%= email_field_tag :email ,nil, placeholder: "Your Email" %> 
      <%= text_field_tag :organization , nil, placeholder: "Which organization referred you?" %> 
      
          <%= submit_tag "GO TO RESUME BUILDER", class: "btn btn-large cyan white-text", id:"btn_submit" %> 

    <% end %> 
    
    
</div> 
